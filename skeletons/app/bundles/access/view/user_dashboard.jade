
extends /frontend/theme/layout
block content
  .container(ng-controller='UserPublicController', ng-init='clear(); share.window("list");')
    .row
      .col-md-12
        h2=__('Users')
    .row
      .col-md-12
        include user_dashboard_actions
    .row(ng-switch='share.selectWindow')
      .col-md-12(ng-switch-when="list")
        include user_list
      .col-md-6.col-md-offset-3(ng-switch-when="createOrUpdate")
        include user_form
        +form_user(true)
      .col-md-6.col-md-offset-3(ng-switch-when="show")
        include user_show
      .col-md-6.col-md-offset-3(ng-switch-when="createOrUpdateUserActivitys")
        h3=__('Activitys')
          small=__('User')
        form.form-horizontal(role='form')
          include /access/view/activity_fields
          +form_fields_activity('newUserActivitys')
        .form-horizontal
          .form-group
            button.btn.btn.btn-success(type='button', ng-click='createOrUpdateUserActivitys();')=__('Save and back')
            | 
            button.btn.btn.btn-default(type='button', ng-click='clearUserActivitys(); share.windowBack();')=__('Cancel')

      .col-md-6.col-md-offset-3(ng-switch-when="createOrUpdateActivityActivitys")
        h3=__('Activitys')
          small=__('Activity')
        form.form-horizontal(role='form')
          include /access/view/activity_fields
          +form_fields_activity('newActivityActivitys')
        .form-horizontal
          .form-group
            button.btn.btn.btn-success(type='button', ng-click='createOrUpdateActivityActivitys();')=__('Save and back')
            | 
            button.btn.btn.btn-default(type='button', ng-click='clearActivityActivitys(); share.windowBack();')=__('Cancel')

    .row
      .col-md-12
        include user_dashboard_actions

    script(src='/js/activity/ActivityPublicFactory.js', type='text/javascript', charset='utf-8').
    script(src='/js/user/UserPublicFactory.js', type='text/javascript', charset='utf-8').
    script(src='/js/user/UserPublicController.js', type='text/javascript', charset='utf-8').