
extends /frontend/theme/layout
block content
  .container(ng-controller='ActivityPublicController', ng-init='clear(); share.window("list");')
    .row
      .col-md-12
        h2=__('Activitys')
    .row
      .col-md-12
        include activity_dashboard_actions
    .row(ng-switch='share.selectWindow')
      .col-md-12(ng-switch-when="list")
        include activity_list
      .col-md-6.col-md-offset-3(ng-switch-when="createOrUpdate")
        include activity_form
        +form_activity(true)

      .col-md-6.col-md-offset-3(ng-switch-when="createOrUpdateActivityActivitys")
        h3=__('Activitys')
          small=__('Activity')
        form.form-horizontal(role='form')
          include /access/view/activity_fields
          +form_fields_activity('newActivityActivitys')
        .form-horizontal
          .form-group
            button.btn.btn.btn-success(type='button', ng-click='createOrUpdateActivityActivitys();')=__('Save and back')
            | 
            button.btn.btn.btn-default(type='button', ng-click='clearActivityActivitys(); share.windowBack();')=__('Cancel')

    .row
      .col-md-12
        include activity_dashboard_actions

    script(src='/js/activity/ActivityPublicFactory.js', type='text/javascript', charset='utf-8').
    script(src='/js/activity/ActivityPublicController.js', type='text/javascript', charset='utf-8').