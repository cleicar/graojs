.form-group
  button.btn.btn-success(type='button', ng-click='createOrUpdate("list");')=__('Save')
  | 
  button.btn.btn-warning(type='button', ng-click='createOrUpdate("createOrUpdate");')=__('Save and continue')
  | 
  button.btn.btn-danger(type='button', ng-click='user.$delete(); clear(); query(); count(); share.window("list");')=__('Remove')
  | 
  button.btn.btn-info(type='button', ng-click='share.window("show");')=__('Show')
  | 
  button.btn.btn-default(type='button', ng-click='clear(); query(); share.window("list")')=__('List')