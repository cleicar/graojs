{%- macro render_refSelect(schema, fields) %}{%- for fieldName, field in fields %}{%- if field.ref && field.type == 'select' %}
      .col-md-6.col-md-offset-3(ng-switch-when="createOrUpdate{{ field.fullPathCc }}")
        h3=__('{{ fieldName | capitalize }}')
          small=__('{{ schema | capitalize }}')
        form.form-horizontal(role='form')
          include /{{ field.bundle | lower }}/view/{{ field.ref | lower }}_fields
          +form_fields_{{ field.ref | lower }}('new{{ field.fullPathCc }}')
        .form-horizontal
          .form-group
            button.btn.btn.btn-success(type='button', ng-click='createOrUpdate{{ field.fullPathCc }}();')=__('Save and back')
            | 
            button.btn.btn.btn-default(type='button', ng-click='clear{{ field.fullPathCc }}(); share.windowBack();')=__('Cancel')
{%- endif %}
{%- if field.hasRef && field.fields %}
  {{ render_refSelect(field.ref, field.fields) }}
{%- endif %}{%- endfor %}{%- endmacro %}
extends /frontend/theme/layout
block content
  .container(ng-controller='{{ schema | capitalize }}PublicController', ng-init='clear(); share.window("list");')
    .row
      .col-md-12
        h2=__('{{ schema | capitalize }}s')
    .row
      .col-md-12
        include {{ schema | lower }}_dashboard_actions
    .row(ng-switch='share.selectWindow')
      .col-md-12(ng-switch-when="list")
        include {{ schema | lower }}_list
      .col-md-6.col-md-offset-3(ng-switch-when="createOrUpdate")
        include {{ schema | lower }}_form
        +form_{{ schema | lower }}(true)
      .col-md-6.col-md-offset-3(ng-switch-when="show")
        include {{ schema | lower }}_show
{{ render_refSelect(schema, fields) }}
